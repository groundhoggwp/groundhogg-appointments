{
    "name": "groundhoggwp/groundhogg-appointments",
    "description": "Create calendars and appointments.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0+-or-later",
    "authors": [
        {
            "name": "Groundhogg Inc."
        }
    ],
    "autoload": {
        "classmap": [
            "admin",
            "api",
            "assets",
            "db",
            "includes",
            "templates"
        ]
    },
    "config": {
        "platform": {
            "php": "7.0"
        },
        "sort-packages": true
    },
    "require": {
        "google/apiclient": "^2.12"
    },
    "extra": {
        "google/apiclient-services": [
            "Calendar"
        ],
        "strauss": {
            "target_directory": "vendor",
            "namespace_prefix": "GroundhoggBookingCalendar\\",
            "classmap_prefix": "GroundhoggBookingCalendar_",
            "exclude_from_prefix": {
                "file_patterns": [
                    "/polyfill/"
                ]
            }
        }
    },
    "scripts-descriptions": {
        "delete-unused-google-apis": "Deletes non-Calendar Google API files.",
        "prefix-namespaces": "Updates the namespaces of the plugin files with the `GroundhoggBookingCalendar` prefix.",
        "create-plugin-archive": "Gernerates `groundhogg-calendar.1.2.3.zip` in the `dist-archive` directory. See the `.distignore` file for configuraiton."
    },
    "scripts": {
        "post-install-cmd": [
            "@delete-unused-google-apis",
            "@prefix-namespaces"
        ],
        "post-update-cmd": [
            "@delete-unused-google-apis",
            "@prefix-namespaces"
        ],
        "delete-unused-google-apis": [
            "Google\\Task\\Composer::cleanup"
        ],
        "prefix-namespaces": [
            "curl --output strauss.phar --location https://github.com/BrianHenryIE/strauss/releases/latest/download/strauss.phar",
            "@php strauss.phar"
        ],
        "create-plugin-archive": [
            "wp i18n make-pot . languages/groundhogg-calendar.pot --domain=groundhogg-calendar",
            "wp dist-archive . ./dist-archive --plugin-dirname=groundhogg-appointments --create-target-dir"
        ]
    },
    "provide": {
        "symfony/polyfill-php70": "*"
    }
}
