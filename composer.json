{
    "name": "groundhoggwp/groundhogg-appointments",
    "description": "Create calendars and appointments.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0+-or-later",
    "authors": [
        {
            "name": "Groundhogg Inc."
        }
    ],
    "autoload": {
        "classmap": [
            "admin",
            "api",
            "assets",
            "db",
            "includes",
            "templates"
        ]
    },
    "config": {
        "platform": {
            "php": "7.0"
        },
        "sort-packages": true
    },
    "require": {
        "google/apiclient": "^2.12"
    },
    "extra": {
        "google/apiclient-services": [
            "Calendar"
        ],
        "strauss": {
            "target_directory": "vendor",
            "namespace_prefix": "GroundhoggBookingCalendar\\",
            "classmap_prefix": "GroundhoggBookingCalendar_"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@delete-unused-google-apis",
            "@prefix-namespaces"
        ],
        "post-update-cmd": [
            "@delete-unused-google-apis",
            "@prefix-namespaces"
        ],
        "delete-unused-google-apis": [
            "Google\\Task\\Composer::cleanup"
        ],
        "prefix-namespaces": [
            "@php strauss.phar"
        ]
    }
}
